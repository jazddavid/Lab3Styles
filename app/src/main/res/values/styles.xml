<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CustomBackground">
        <item name="android:background">#000000</item>
    </style>


    <style name="CustomTitle">
        <item name="android:fontFamily">@font/hulk3d2</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ccff8c</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomText">
        <item name="android:fontFamily">@font/julian</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#c8ff79</item>
    </style>

    <style name="CustomButton">
        <item name="android:fontFamily">@font/julian</item>
        <item name="android:background">@color/lightBlue</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">119dp</item>
        <item name="android:layout_height">62dp</item>
    </style>

</resources>
